config NFC_CHARGER_APP
	bool "NFC Charger Application"
	default y
	help
	  Enable the NFC charger application with ST25R3916B support.

if NFC_CHARGER_APP

config ST25R3916B_DRIVER
	bool "ST25R3916B NFC Reader Driver"
	default y
	depends on SPI
	help
	  Enable ST25R3916B NFC reader chip driver.

config OPA323_ADC_CONTROL
	bool "OPA323 ADC Control for Ambient Light"
	default y
	depends on ADC && PWM
	help
	  Enable ambient light sensing and LED brightness control.

endif # NFC_CHARGER_APP

source "Kconfig.zephyr"